{
  "info": {
    "name": "Finance Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Driver Topup (Provider Deposit)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{driverToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 100,\n  \"paymentMethod\": \"Telebirr\",\n  \"reason\": \"Provider deposit test\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/v1/wallet/topup", "host": ["{{baseUrl}}"], "path": ["v1", "wallet", "topup"] }
      }
    },
    {
      "name": "Webhook Success (Converts to Package)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"thirdPartyId\": \"{{transactionId}}\",\n  \"Status\": \"SUCCESS\",\n  \"amount\": 100,\n  \"TxnId\": \"TX-DRV-1\"\n}" },
        "url": { "raw": "{{baseUrl}}/v1/wallet/webhook", "host": ["{{baseUrl}}"], "path": ["v1", "wallet", "webhook"] }
      }
    },
    {
      "name": "Nearby Bookings Filtered by Package",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{driverToken}}" } ],
        "url": {
          "raw": "{{baseUrl}}/v1/bookings/nearby?latitude=40.7128&longitude=-74.0060&radiusKm=5&vehicleType=mini&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "bookings", "nearby"],
          "query": [
            { "key": "latitude", "value": "40.7128" },
            { "key": "longitude", "value": "-74.0060" },
            { "key": "radiusKm", "value": "5" },
            { "key": "vehicleType", "value": "mini" },
            { "key": "limit", "value": "20" }
          ]
        }
      }
    }
  ]
}

